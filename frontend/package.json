{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "generate:schema": "curl -o ./openapi-schema.json http://django:8000/api/schema/",
    "generate:types": "openapi-ts --input ./openapi-schema.json --output ./src/api --client @hey-api/client-axios",
    "generate:api": "npm run generate:schema && npm run generate:types",
    "generate:api:local": "curl -o ./openapi-schema.json http://localhost:8000/api/schema/ && npm run generate:types",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@hey-api/client-axios": "^0.9.1",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/vue-query": "^5.90.5",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^14.0.0",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.552.0",
    "pinia": "^3.0.3",
    "radix-vue": "^1.9.17",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.86.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.9.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.2",
    "@vue/tsconfig": "^0.8.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.0.1",
    "openapi-typescript-codegen": "^0.29.0",
    "sass": "^1.93.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vitest": "^4.0.2",
    "vue-tsc": "^3.1.0"
  }
}
